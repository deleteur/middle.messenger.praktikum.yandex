<main class={{s.main}}>
    <div class={{s.wrapper}}>
        <h1 class={{s.title}}>{{title}}</h1>
        <form class={{s.form}} action="/auth/signin" method="post">
            <input type="text" name="email" placeholder='Почта'>
            <input type="text" name="login" placeholder='Логин'>
            <input type="text" name="first_name" placeholder='Имя'>
            <input type="password" name="second_name" placeholder='Фамилия'>
            <input type="password" name="phone" placeholder='Телефон'>
            <input type="password" name="password" placeholder='Пароль'>
            <input type="password" name="password" placeholder='Пароль (ещё раз)'>
            {{> button class=s.submit text='Зарегистрироваться' type="submit"}}
        </form>
        <a href="/chat" class={{s.additionalBtn}}>Войти</a>
    </div>
</main>